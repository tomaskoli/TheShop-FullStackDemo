{
  "name": "pg-categories-source",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSourceConnector",
    "tasks.max": "1",
    "connection.url": "jdbc:postgresql://postgres:5432/theshopdb",
    "connection.user": "postgres",
    "connection.password": "postgres",
    "mode": "bulk",
    "query": "SELECT \"Id\" as id, \"Name\" as name, \"Description\" as description FROM catalog.\"Categories\"",
    "topic.prefix": "pg_categories",
    "poll.interval.ms": "60000",
    "numeric.mapping": "best_fit"
  }
}

